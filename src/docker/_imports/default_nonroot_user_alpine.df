RUN  getent group hugo 2>&1 > /dev/null || addgroup -g 1234 hugo \
    &&  getent passwd hugo 2>&1 > /dev/null || adduser -u 1234 -D -H -G hugo -g "" hugo \
    && chown -R hugo /src \
    && chown -R hugo /target \
    # add /src to safe.directory
    && git config --global --add safe.directory /src

